{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/nest-toto": ["libs/nest-toto/src"],
      "@app/nest-toto/*": ["libs/nest-toto/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
